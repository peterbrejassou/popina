{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}Login{% endtrans %}</h1>
    <form action="{{ path('login') }}" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="{% trans %}Email{% endtrans %}" required name="_username">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" placeholder="{% trans %}Password{% endtrans %}" required name="_password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
        </div>
    </form>
{% endblock %}