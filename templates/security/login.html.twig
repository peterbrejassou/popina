{% extends 'base.html.twig' %}

{% block body %}
    <h1>Login</h1>
    <form action="{{ path('login') }}" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Adresse email" required, name="_username">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" placeholder="Mot de passe" required, name="_password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Valider</button>
        </div>
    </form>
{% endblock %}