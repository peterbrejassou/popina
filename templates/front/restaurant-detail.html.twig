{% extends 'front/base.html.Twig' %}

{% block content %}
    <div class="home">
        <div class="restaurant--detail">
            <div class="restaurant--infos"> 
                <div class="restaurant--left">  
                    <h1>{{restaurant.nom}}</h1>
                    <div>
                        <h2 class="title"> {{ 'restaurant.adresse'|trans }} </h2>
                        <p> {{restaurant.adresse}}</p>
                    </div>
                    <div>
                        <h2 class="title">{{ 'restaurant.cp'|trans }} </h2>
                        <p> {{restaurant.codePostal}}</p>
                    </div>
                    <div>
                        <h2 class="title"> {{ 'restaurant.ville'|trans }} </h2>
                        <p> {{restaurant.ville}}</p>
                    </div>
                    <div>
                        <h2 class="title">{{ 'restaurant.site_web'|trans }} </h2>
                    <a href="{{restaurant.siteWeb}}" target="_blank"> <p> {{restaurant.siteWeb}}</p></a>
                    </div>
                    <div>
                        <h2 class="title"> {{ 'restaurant.type'|trans }} </h2>
                        <p> {{restaurant.type}}</p>
                    </div>
                </div>
                <div class="restaurant--right"> 
                    <div class="restaurant--img"><img  src="/uploads/photos/{{restaurant.photo}}" />   </div>
                    
                    <div class="restaurant--adresse">
                        <p> {{restaurant.telephone}}</p>
                        <a href="{{restaurant.email}}"> <p>{{restaurant.email}}</p></a>
                        <p> {{restaurant.horaires}}</p>
                    </div>
                </div>
            </div>

            <a href="{{ path('contact', {slug: restaurant.slug}) }}" class="btn">{{ 'restaurant.contact'|trans }}</a>
    
            <div class="plat--infos"> 
                <h2> {{ 'restaurant.carte'|trans }} </h2>
                <div class="carte"> 
                <div class="entree"> 
                    <h3 class="title">{{ 'carte.entree'|trans }}</h3>
                    {% for entree in entrees %}
                        <div class="carte--item"> 
                            <p class="plat_nom">{{entree.nom}}</p>
                            <p class="desc">{{entree.description}}</p>
                            <p>{{entree.prix|prix}}</p>
                        </div>
                    {% endfor %}
                </div>
                <div class="plat"> 
                    <h3 class="title">{{ 'carte.plat'|trans }}</h3>
                    {% for plat in plats %}
                        <div class="carte--item">
                            <p class="plat_nom">{{plat.nom}}</p>
                            <p class="desc">{{plat.description}}</p>
                            <p>{{plat.prix|prix}}</p>
                        </div>
                    {% endfor %}
                </div>
                <div class="dessert"> 
                    <h3 class="title">{{ 'carte.dessert'|trans }}</h3>
                    {% for dessert in desserts %}
                        <div class="carte--item">
                            <p class="plat_nom">{{dessert.nom}}</p>
                            <p class="desc">{{dessert.description}}</p>
                            <p>{{dessert.prix|prix}}</p>
                        </div>
                    {% endfor %}
                </div>
                <div class="boisson"> 
                    <h3 class="title">{{ 'carte.boisson'|trans }}</h3>
                    {% for boisson in boissons %}
                        <div class="carte--item">
                        <p class="plat_nom">{{boisson.nom}}</p>                        
                        <p>{{boisson.quantite}} cl</p>
                        <p class="desc">{{boisson.description}}</p>
                        <p>{{boisson.prix|prix}}</p>
                    </div>
                    {% endfor %}           
                </div>
            </div>
        </div>
    </div>
{% endblock %}
