{% extends 'front/base.html.Twig' %}

{% block content %}

<div class="home">
    <div class="container">
        <div class="row ">
            
        <div class="row">
            <div class="col-2">
                <h5>{{ 'global.filtre'|trans }}</h5>
                <a class="linkFilter" id="filtre0" href="{{ path("home") }}">Tous</a>
                <a class="linkFilter" id="filtre1" href="{{ path("home_filtered", {filter:"cuisine-francaise"}) }}">Cuisine franÃ§aise</a>
                <a class="linkFilter" id="filtre2" href="{{ path("home_filtered", {filter:"asiatique" }) }}">Asiatique</a>
                <a class="linkFilter" id="filtre3" href="{{ path("home_filtered", {filter:"fast-food" }) }}">Fast Food</a>
            </div>
            <div class="col-10">
                <div class="list-group card--container">
                    {% for restaurant in restaurants %}
                            <div class="card card--item">
                                <div class="card-img-top card--img">
                                    <img  src="/uploads/photos/{{ restaurant.photo }}" alt="Image restaurant">
                                    <p class="card--type">{{ restaurant.type|replace({'-': " "}) }}</p>
                                </div>
                                
                                <div class="card-body">
                                    <h5 class="card-title">{{ restaurant.nom }}</h5>
                                    <p class="card-text">{{ restaurant.adresse }}</p>
                                    <a href="{{ path('restaurant_detail', {id: restaurant.id}) }}" class="btn">{{ 'restaurant.detail'|trans }}</a>
                                </div>
                            </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
