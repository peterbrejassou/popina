{% extends 'front/base.html.Twig' %}

{% block content %}

<section class="admin">
    <h1>{{ 'global.admin'|trans }}</h1>

    <h3>{{ 'restaurant.liste'|trans }}</h3>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>{{ 'global.nom'|trans }}</th>
            </tr>
        </thead>
            <tbody>
            {% for restaurant in restaurants %}
                <tr>
                    <td>{{ restaurant.id }}</td>
                    <td>{{ restaurant.nom }}</td>
                    <td><a href="{{ path('restaurant_detail_admin', {slug: restaurant.slug}) }}" class="btn">{{ 'restaurant.details'|trans }}</a></td>
                    <td><a href="{{ path('update_restaurant', {slug: restaurant.slug}) }}" class="btn">{{ 'restaurant.update'|trans }}</a></td>
                    <td><a href="{{ path('remove_restaurant', {slug: restaurant.slug}) }}" class="btn">{{ 'restaurant.remove'|trans }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
    </table>

    <a href="{{ path('add_restaurant') }}" class="btn btn--add">{{ 'restaurant.add'|trans }}</a>
    <a href="{{ path('add_type') }}" class="btn btn--add"> Ajouter un type de restaurant </a>
</section>
{% endblock %}
